@font-face {
    font: {
       family: 'myBemio';
       weight: 'normal';
       style: 'normal';
    }
   src: asset-url('Bemio.otf', font);
   src: asset-url('Bemio.otf?#iefix') format('opentype');

}

@font-face {
    font: {
       family: 'Serifa';
       weight: 'normal';
       style: 'normal';
    }
   src: asset-url('Serifa.otf', font);
    src: asset-url('Serifa.otf?#iefix') format('opentype');

}

@font-face {
    font: {
       family: 'SerifaBold';
       weight: 'normal';
       style: 'normal';
    }
    src: asset-url('SerifaBold.otf', font);
   src: asset-url('SerifaBold.otf?#iefix') format('opentype');
}

$font-stack:    Serifa, Helvetica, sans-serif;
$primary-color: #444;
$blue: #9BDED7;
$gray: #DDD;
body {
  font: 100% $font-stack;
  color: $primary-color;
}

.container{
width: 900px ;
margin-top:20px;
  margin-left: auto ;
  margin-right: auto ;
 height:120px;
  padding-top:10px;
  
  background-color:$gray;

  -webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	-ms-border-radius: 6px;
	-o-border-radius: 6px;
	border-radius: 6px;
}
.logo{
width:900px;
margin-left:auto;
margin-right:auto;
height:80px;
	background-image: image-url('logo.png');
	background-repeat:no-repeat;
	 background-position: left 00px bottom 18px;

}

.subHeaderText{
	width:900px;

margin-left:auto;
margin-right:auto;
}

.header {
height:85px;
background-color:#C50200;


}

.blueSubHeader{
color:#FFFFFF;
font-family:myBemio;
font-size:28px;
height:43px;
background-color:#9BDED7;
padding-top:15px;
padding-left:0px;
-webkit-font-smoothing: antialiased;
}


.circle {
	position:absolute;
	left:-80px;
	width: 60px;
	height: 60px; 
	background-color:$primary-color;
	float:left;
	-webkit-border-radius: 50%;
	-moz-border-radius: 50%;
	-ms-border-radius: 50%;
	-o-border-radius: 50%;
	border-radius: 50%;

}


.circleNumber{
	font-family:Bemio;
	font-size:32px;
	color:#FFF;
	padding-left:22px;
	padding-top:15px;
	display:block;
	-webkit-font-smoothing: antialiased;
}

.section{

	margin:30px 0px 60px 100px;
	position:relative;
}

.sectionTitle{
	font-family:SerifaBold;
	font-size:28px;
	color:$primary-color;
	padding-top:20px;
	-webkit-font-smoothing: antialiased;
}

.flavorOptionsSection{
	margin-top:30px;
}

.flavorOptionsOn, .flavorOptionsOff{

	
	cursor:pointer;
	height:30px;
	width:170px;
	font-size:15px;
	text-align:center;
	padding-top:12px;
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	-ms-border-radius: 6px;
	-o-border-radius: 6px;
	border-radius: 6px;
}




.flavorOptionsOn
{
	background-color:$blue;
	color:#FFFFFF;
}

.flavorOptionsOff
{
	background-color:#CCC;
	color:$primary-color;
	cursor:auto;
}

.btnSubmit{
	background-color:#DED516;
	font-family:myBemio;
	color:#FFF;
	font-size:26px;
	padding:5px 20px 5px 20px;
	float:left;
	-webkit-font-smoothing: antialiased;
	box-shadow: none;
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	-ms-border-radius: 6px;
	-o-border-radius: 6px;
	border-radius: 6px;
}

table, tr
{
width:950px;
padding:5px;
}

td
{
width:180px;
}

.flavor{
	
	height:40px;
	color:#FFF;
	font-size:18px;
	text-align:center;
	padding-top:7px;
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	-ms-border-radius: 6px;
	-o-border-radius: 6px;
	border-radius: 6px;
}

.on{
	background-color:#9BDED7;
}

.off{
	background-color:#DDD;
}

