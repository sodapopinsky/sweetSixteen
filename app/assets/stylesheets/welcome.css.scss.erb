@font-face {
    font: {
       family: 'myBemio';
       weight: 'normal';
       style: 'normal';
    }
    src: asset-url('Bemio.otf', font);
    src:asset-url('Bemio.otf?#iefix') format('opentype');

}

@font-face {
    font: {
       family: 'Serifa';
       weight: 'normal';
       style: 'normal';
    }
    src: asset-url('Serifa.otf', font);
    src:asset-url('Serifa.otf?#iefix') format('opentype');

}

@font-face {
    font: {
       family: 'SerifaBold';
       weight: 'normal';
       style: 'normal';
    }
    src: asset-url('SerifaBold.otf', font);
    src:asset-url('SerifaBold.otf?#iefix') format('opentype');
}

$font-stack:    Serifa, Helvetica, sans-serif;
$primary-color: #444;

body {
  font: 100% $font-stack;
  color: $primary-color;
}




.header {
height:85px;
background-color:#C50200;
background-image: url(image-path('logo.png'));
background-repeat:no-repeat;
background-attachment:fixed;
background-position:20px 25px;
}

.blueSubHeader{
color:#FFFFFF;
font-family:myBemio;
font-size:28px;
height:43px;
background-color:#9BDED7;
padding-top:15px;
padding-left:20px;
-webkit-font-smoothing: antialiased;
}


.circle {
	position:absolute;
	left:-80px;
	width: 60px;
	height: 60px; 
	background-color:$primary-color;
	float:left;
	-webkit-border-radius: 50%;
	-moz-border-radius: 50%;
	-ms-border-radius: 50%;
	-o-border-radius: 50%;
	border-radius: 50%;

}

.circleNumber{
	font-family:Bemio;
	font-size:32px;
	color:#FFF;
	padding-left:22px;
	padding-top:15px;
	display:block;
	-webkit-font-smoothing: antialiased;
}

.section{

	margin:30px 0px 60px 100px;
	position:relative;
}

.sectionTitle{
	font-family:SerifaBold;
	font-size:28px;
	color:$primary-color;
	padding-top:20px;
	-webkit-font-smoothing: antialiased;
}

.flavorOptionsSection{
	margin-top:30px;
}

.flavorOptions{
	padding-right:30px;
	font-size:18px;
	float:left;
}

.btnSubmit{
	background-color:#DED516;
	font-family:myBemio;
	color:#FFF;
	font-size:26px;
	padding:5px 20px 5px 20px;
	float:left;
	-webkit-font-smoothing: antialiased;
	box-shadow: none;
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	-ms-border-radius: 6px;
	-o-border-radius: 6px;
	border-radius: 6px;
}

table, tr
{
width:950px;
padding:5px;
}

td
{
width:160px;
}

.flavor{
	
	height:40px;
	color:#FFF;
	font-size:18px;
	text-align:center;
	padding-top:7px;
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	-ms-border-radius: 6px;
	-o-border-radius: 6px;
	border-radius: 6px;
}

.on{
	background-color:#9BDED7;
}

.off{
	background-color:#DDD;
}

