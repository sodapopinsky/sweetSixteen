$font-stack:  SerifaBold, Helvetica, sans-serif;
$primary-color: #444;
$blue: #9BDED7;
$lightGray: #F1F1F1;
$mediumGray: #CCC;
$darkGray: #777;

body {
  font: 100% $font-stack;
  color: $primary-color;
}


.header {
height:85px;
background-color:#C50200;
}

h1{
	font-family:myBemio;
	color:$darkGray; 
	font-size:22px;
	 -webkit-font-smoothing: antialiased;
	 margin:0px;
	 padding:0px;
	 margin-left:120px; 
}
h2{
	color:$darkGray; 
	font-size:15px;
	 font: 100% $font-stack;
	 -webkit-font-smoothing: antialiased;
	 margin-left:120px; 
}
.logo{
	width:960px;
	margin-left:auto;
	margin-right:auto;
	height:80px;
	background-image: image-url('logo.png');
	background-repeat:no-repeat;
	background-position: left 00px bottom 18px;
}

.blueSubHeader{
color:#FFFFFF;
font-family:myBemio;
font-size:28px;
height:43px;
background-color:#9BDED7;
padding-top:15px;
padding-left:0px;
-webkit-font-smoothing: antialiased;
}


.subHeaderText{
	width:960px;
	margin-left:auto;
	margin-right:auto;
}


.picCircle{
	width:110px;
	height:110px;
	top:-40px;
	left:0px;

	background-color:$mediumGray;
	position:absolute;
	  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  -ms-border-radius: 50%;
  -o-border-radius: 50%;
  border-radius: 50%;
}
.container{
  width: 960px ;

  margin-top:50px;
  margin-left: auto;
  margin-right: auto ;
  padding-top:10px;
  padding-bottom:20px;
  position:relative;
  background-color:$lightGray;
  -webkit-border-radius: 8px;
  -moz-border-radius: 8px;
  -ms-border-radius: 8px;
  -o-border-radius: 8px;
  border-radius: 8px;
}

.welcome{
	height:75px; 
	width:930px;
	 border-bottom:1px solid $mediumGray; 
	 margin-left:auto; 
	 margin-right:auto;
	 position:relative;
}

.whiteBox{
	font-family:Serifa;
	margin-top:10px; 
	background-color:#FFF; 
	padding:15px; 
	text-align:center;
	 margin-left:auto; 
	 margin-right:auto;
	  width:900px; 
	  color:$darkGray;
	-webkit-font-smoothing: antialiased;
		-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	-ms-border-radius: 6px;
	-o-border-radius: 6px;
	border-radius: 6px;
	font-size:14px;

}
.flavorOptionsOn, .flavorOptionsOff, .disabledOn, .disabledOff, .flavorOptionsInactive{
	cursor:pointer;
	height:30px;
	width:140px;
	font-size:15px;
	text-align:center;
	padding-top:14px;
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	-ms-border-radius: 6px;
	-o-border-radius: 6px;
	border-radius: 6px;
	position:absolute;
		-webkit-font-smoothing: antialiased;

}
.disabledOn{
	background-color:$blue;
	color:#FFFFFF;
	cursor:auto;
	opacity:.5;
}

.disabledOff{
	color:#FFF;
	background-color:$darkGray;
	cursor:auto;
	opacity:.5;
}

.flavorOptionsOn
{
	background-color:$blue;
	color:#FFFFFF;
}

.flavorOptionsOff
{
	color:#FFF;
	background-color:$darkGray;
	cursor:auto;
}
.flavorOptionsOff:hover{
		background-color:$blue;
	color:#FFFFFF;
	cursor:pointer;
}

.flavorOptionsInactive{
color:#FFF;
	cursor:auto;
	background-color:$mediumGray;
}


.btnSubmit{
	background-color:#DED516;
	font-family:myBemio;
	color:#FFF;
	font-size:26px;
	padding:5px 20px 5px 20px;
	float:left;
	-webkit-font-smoothing: antialiased;
	box-shadow: none;
	-webkit-border-radius: 6px;
	-moz-border-radius: 6px;
	-ms-border-radius: 6px;
	-o-border-radius: 6px;
	border-radius: 6px;
}

.eeVerticalLine{
	border-left:1px solid $mediumGray;
	height:50px;
	width:1px;
	position:absolute;
}

.ffVerticalLine{
	border-left:1px solid $mediumGray;
	height:175px;
	width:1px;
	position:absolute;
}


table, tr
{
width:920px;
position:relative;
}

td
{
width:131px;

}






